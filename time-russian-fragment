import time
import datetime

hour= str(time.strftime('%H', time.localtime()))
minutes =str(time.strftime('%M', time.localtime()))
now_date = datetime.date.today()
cur_month = now_date.month # Месяц текущий
cur_day = now_date.day # День текущий


month_names = [
    u'Января',
    u'Февраля',
    u'Марта',
    u'Апреля',
    u'Мая',
    u'Июня',
    u'Июля',
    u'Августа',
    u'Сентября',
    u'Октября',
    u'Ноября',
    u'Декабря',    
]

month = datetime.date.today().month

        
timenow = ("Сегодня "+ str(cur_day) + " " + month_names[month - 1] + " "  + hour + " часов " + minutes + " минут")
print(timenow)



